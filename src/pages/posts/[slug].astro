---
// src/pages/posts/[slug].astro
import { getCollection } from 'astro:content';

// This function is required for dynamic routes in static mode.
// It tells Astro which pages to generate at build time.
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug }, // The slug is used to generate the URL
    props: { post }, // The post data is passed as props to the page
  }));
}

// Get the specific post data from the props passed by getStaticPaths
const { post } = Astro.props;
const { Content } = await post.render();
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{post.data.title}</title>
    <style>
        body { font-family: sans-serif; line-height: 1.6; max-width: 800px; margin: 2rem auto; }
        .post-content { margin-top: 2rem; }
        img { max-width: 100%; height: auto; }
    </style>
</head>
<body>
    <a href="/">&larr; Back to Home</a>
    <h1>{post.data.title}</h1>
    <p>Published on: {post.data.pubDate.toLocaleDateString()}</p>
    <hr>
    
    <!-- This component renders your Markdown content -->
    <div class="post-content">
        <Content />
    </div>
</body>
</html>
